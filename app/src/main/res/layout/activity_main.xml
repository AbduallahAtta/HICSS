<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <ImageButton
                        android:id="@+id/newlks"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/menuitem_background"
                        android:clickable="true"
                        android:onClick="website"
                        />

                    <TextView
                        android:id="@+id/tvphotoljks"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="website"
                        android:text="الطالب"
                        android:contextClickable="false"
                        android:textAlignment="center"
                        android:background="@android:drawable/menuitem_background"

                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".80"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <ImageButton
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/menuitem_background"
                        android:clickable="true"
                        android:onClick="website"
                        android:contextClickable="false"

                       />

                    <TextView
                        android:id="@+id/tvmap"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="website"
                        android:text="اعضاء هيئه التدريس"
                        android:background="@android:drawable/menuitem_background"

                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:textColor="@android:color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <ImageButton
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:layout_weight="3"
                        android:background="@android:drawable/menuitem_background"
                        android:clickable="true"
                        android:onClick="website"
                        android:contextClickable="false"


                        />

                    <TextView
                        android:id="@+id/tvnewsss"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/menuitem_background"

                        android:onClick="website"
                        android:text="معرض الصور"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".80"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <ImageButton
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/menuitem_background"
                        android:clickable="true"
                        android:onClick="website"
                        />

                    <TextView
                        android:id="@+id/tvphotos"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="website"
                        android:text="التدريبات والكورسات الاضافيه"
                        android:contextClickable="false"
                        android:textAlignment="center"
                        android:background="@android:drawable/menuitem_background"

                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <ImageButton
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"

                        android:contextClickable="false"
                        android:onClick="website"

                         />

                    <TextView
                        android:id="@+id/tvnews"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="website"
                        android:text="جريده لمعهد "
                        android:background="@android:drawable/menuitem_background"

                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />




                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.80"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >
                    <ImageButton
                        android:id="@+id/njews"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/menuitem_background"
                        android:clickable="true"
                        android:onClick="website"
                        />

                    <TextView
                        android:id="@+id/tvplhotos"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:onClick="website"
                        android:text="نبذه عن المعهد"
                        android:contextClickable="false"
                        android:textAlignment="center"
                        android:background="@android:drawable/menuitem_background"

                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:orientation="horizontal">




                <ImageButton
                    android:id="@+id/imkagedVihew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_www"
                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="website"

                    app:srcCompat="@drawable/ic_phone"
                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="website"
                    app:srcCompat="@drawable/ic_placeholder"


                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".300"
                android:gravity="center"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="facebook"
                    app:srcCompat="@drawable/ic_facebook"
                    tools:ignore="OnClick,VectorDrawableCompat" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="website"

                    app:srcCompat="@drawable/ic_linkedin"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="website"
                    app:srcCompat="@drawable/ic_youtube"/>


                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



