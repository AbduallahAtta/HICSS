<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/listcour"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:visibility="visible">



        <TextView
            android:id="@+id/cou_name"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#00004d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <TextView
            android:id="@+id/dr_namr"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#00004d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView
            android:id="@+id/book_name"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#00004d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"

            />
        <TextView
            android:id="@+id/full_mark"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#00004d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <TextView
            android:id="@+id/stu_mark"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#00004d"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:id="@+id/stu_Percentage"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#be2337"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />
        <TextView
            android:id="@+id/stu_grade"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:fontFamily="casual"
            android:text=""
            android:textAllCaps="true"
            android:textColor="#be2337"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />




    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6FC8DF" />
</LinearLayout>

